{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            120
        ],
        "no-console": "warn",
        "no-alert": "warn",
        "no-debugger": "warn",
        "valid-jsdoc": "error",
        "newline-after-var": [
            "error",
            "always"
        ]
    }
}